generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String         @unique
  emailVerified DateTime?
  password      String
  verifyToken   String?
  resetPasswordToken String? @unique
  resetPasswordTokenExpiry DateTime?
}
 
model VerificationToken{
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String
  token      String
  expires    DateTime
 
  @@unique([email, token])
}